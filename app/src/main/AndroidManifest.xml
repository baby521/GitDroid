<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="git.feicui.com.gitdroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".GitDroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".github.MainActivity" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".github.login.LoginActivity"></activity>
        <activity android:name=".github.repoinfo.RepoInfoActivity"></activity>

    </application>

</manifest>
